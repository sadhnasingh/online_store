<div class="clear"></div>
  <section id="main" class="login entire_width">
    <div class="container_12">      
       <div id="content">
        <div class="col-md-12">
    <div class="grid_6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put , class: "registed"}) do |f| %>
        <h2>Change your password</h2>
        <%= f.hidden_field :reset_password_token %>
         <div class="password">
          <strong>Password:</strong><sup class="surely">*</sup><br/>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div><!-- .password -->
        <div class="password">
          <strong>Password Confirmation:</strong><sup class="surely">*</sup><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
        <div class="reset">                    
          <%= f.submit "Change my password" %>
        </div><!-- .submit -->
      <% end%>
                </div><!-- .grid_6 -->
       </div><!-- #content -->
       </div>
      <div class="clear"></div>
    </div><!-- .container_12 -->
  </section><!-- #main -->