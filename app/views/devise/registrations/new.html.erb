<div class="clear"></div>
  
  <section id="main" class="login entire_width">
    <div class="container_12">      
       <div id="content">
    <div class="grid_12">
      <h1 class="page_title">Login or Create an Account</h1>
    </div><!-- .grid_12 -->
    
    <div class="grid_6 new_customers">
      <h2>New Customers</h2>
      <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
      <div class="clear"></div>
      <button class="account">Create An Account</button>
                </div><!-- .grid_6 -->
    
    <div class="grid_6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "registed"} )  do |f| %>
        <h2>Sign up</h2>
        <div class="email">
          <strong>Email Adress:</strong><sup class="surely">*</sup><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div><!-- .email -->
              
        <div class="password">
          <strong>Password:</strong><sup class="surely">*</sup><br/>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div><!-- .password -->
        <div class="password">
          <strong>Password Confirmation:</strong><sup class="surely">*</sup><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
        <div class="submit">                    
          <%= f.submit "Sign up" %>
          <sup class="surely">*</sup><span>Required Field</span>
        </div><!-- .submit -->
      <% end%>
                </div><!-- .grid_6 -->
       </div><!-- #content -->
       
      <div class="clear"></div>
    </div><!-- .container_12 -->
  </section><!-- #main -->