<p id="notice"><%= notice %></p>

<h1>Product Variants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Product</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_variants.each do |product_variant| %>
      <tr>
        <td><%= product_variant.name %></td>
        <td><%= product_variant.product_id %></td>
        <td><%= image_tag product_variant.image.try(:url).to_s , width: 100, height: 100  %></td>
        <td><a href="/products/<%= product_variant.product_id%>/product_variants/<%= product_variant.id%>">Show</a>
        <td><a href="/products/<%= product_variant.product_id%>/product_variants/<%= product_variant.id%>/edit">Edit</a><%#= link_to 'Edit', edit_product_product_variant_path(product_variant) %></td>
        <td><a href="/products/<%= product_variant.product_id%>/product_variants/<%= product_variant.id%>" data-method="delete">Destroy</a><%#= link_to 'Destroy', product_product_variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product Variant', new_product_product_variant_path %>
